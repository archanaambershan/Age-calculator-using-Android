<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:padding="16dp"
    android:background="@color/lightpink">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CALCULATE YOUR"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="@color/deeppink"

       />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AGE"
        android:layout_marginTop="15dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:padding="10dp"
        android:background="@color/deeppink"
        android:textColor="@color/lightpink"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/selectdate"
        android:layout_marginTop="15dp"
        android:textColor="@color/deeppink"
        android:text="SELECT  DATE"
        android:backgroundTint="@color/white"
        android:textStyle="bold"
        android:textSize="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:id="@+id/date"
        android:layout_marginTop="20dp"
        android:textSize="20dp"
        android:textColor="@color/deeppink"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/coralpink"
        android:layout_marginTop="15dp"
        android:text="Selected Date"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ageinmin"
        android:layout_marginTop="15dp"
        android:textSize="35dp"
        android:textColor="@color/deeppink"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/coralpink"
        android:layout_marginTop="15dp"
        android:text="Age in Minutes"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ageinhr"
        android:layout_marginTop="15dp"
        android:textSize="35dp"
        android:textColor="@color/deeppink"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/coralpink"
        android:layout_marginTop="15dp"
        android:text="Age in Hours"
        android:textSize="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ageindys"
        android:layout_marginTop="15dp"
        android:textSize="35dp"
        android:textColor="@color/deeppink"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/coralpink"
        android:layout_marginTop="15dp"
        android:text="Age in Days"
        android:textSize="20dp"/>

</LinearLayout>